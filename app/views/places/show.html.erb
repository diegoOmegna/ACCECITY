
<div class="container">
  <%= render "/shared/card" %>
  <p><%= "#{@reviews.length} people have reviewed"%></p>
    <p>Average Rating <%= @avg_review %></p>

    <% @place.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>

    <h2><strong>About Place</strong></h2>
    <p>  <%= @place.details %> </p>

      <div>
        <h2><strong><%= "Reviews (#{@reviews.length})" %></strong></h2>
          <% if @reviews.blank? %>
              <h3>No reviews just yet, be the first and add a Review to help others!</h3>
          <% else %>
              <ul class="list-group">
              <% @place.reviews.each do |review| %>
                <li class="list-group-item"><%= review.rating %></li>
                <li class="list-group-item"><%= review.comment %></li>
              <% end %>
          <% end %>
      </div>

    <%= link_to "Write Review", new_place_review_path(@place), class: "btn btn-primary" %>

    <h2><strong>Gallery Photo</strong></h2>
    <%= render "shared/img_upload" %>



  <div style="width: 400px; height: 600px;" data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  </div>
