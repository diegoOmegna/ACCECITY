<h1> index </h1>

<%= form_with url: places_path, method: :get, class: "d-flex my-3" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a Place"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="container">
<ul>
  <% @places.each do |place| %>
    <li>Name: <%= place.name %></li>
    <li>Details: <%= place.details %> </li>
    <li>Address: <%= place.address %> </li>

    <%= link_to "edit", edit_place_path(place), class:"btn btn-primary"%>
    <%= link_to "delete", place_path(place), class:"btn btn-primary", data:{turbo_method:"delete", turbo_confirm:"Are u bloody sure?"}%>
    <%= link_to "show", place_path(place), class:"btn btn-primary"%>


  <% end %>
</ul>
</div>

<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>

<%= link_to "Add new place", new_place_path, class:"btn btn-primary" %>
<%= link_to "go back", root_path, class:"btn btn-primary"%>
