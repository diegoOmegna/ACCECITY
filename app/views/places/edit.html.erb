<div class="container">
  <h1> Edit Place </h1>

  <%= simple_form_for @place do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :details %>
    <%= f.text_area :details, maxlength: 300, error: 'The text may not be longer than 300 Characters'%>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.input :header_photo, as: :file, input_html: { multiple: false } %>
    <%= f.button :submit, "Update Place", class: "btn btn-primary" %>
  <% end %>
</div>
