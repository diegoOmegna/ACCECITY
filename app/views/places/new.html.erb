<div class="container">
  <h1> Add a new place </h1>

  <% @place.errors.each do |error|%>
    <%= error.full_message %>
  <% end %>

<%= simple_form_for @place do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :details %>
  <%= f.text_area :details, maxlength: 300, error: 'The text may not be longer than 300 Characters'%>
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>
  <%= f.label :address %>
  <%= f.input :address,as: :hidden,
  input_html: {data: {address_autocomplete_target: "address"}},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
  <%= f.input :header_photo, as: :file, input_html: { multiple: false } %>
  <%= f.submit, "Add Place", class: "btn btn-primary"  %>
<% end %>

  <%= render "shared/footer" %>
</div>
